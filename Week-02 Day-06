// Ques-01 
// Write a C++ program that takes an array as input and prints the sum of the array.

#include<bits/stdc++.h>
using namespace std;

int main(){
    
    int a;
   
    int sum=0;
    
    cout<<"Enter the size of the array: ";
    cin>>a;
     int arr[a];
    cout<<"Enter the array: ";
    for(int i=0;i<a;i++){
        cin>>arr[i];
    }
    
    for(int i=0;i<a;i++){
        sum=sum+arr[i];
    }
    
    cout<<"Sum of the array: "<<sum<<endl;
}




// Ques-02 
// Write a C++ program that takes an array as input and prints the sum of odd numbers and the sum of even numbers separately.

#include<bits/stdc++.h>
using namespace std;

int main(){
    int a;
    int odd=0;
    int even=0;
    
    cout<<"Enter the size of the array: ";
    cin>>a;
    int arr[a];
    cout<<"Enter the array: ";
    for(int i=0;i<a;i++){
        cin>>arr[i];
    }
    
    for(int i=0;i<a;i++){
        if(arr[i]%2==0){
            even=even+arr[i];
        }else{
            odd=odd+arr[i];
        }
    }
    
    cout<<"Sum of odd number: "<<odd<<endl;
    cout<<"Sum of even number: "<<even<<endl;
}




// Ques-03 
// Write a C++ program that takes an array as input and prints the number of odd numbers and the number of even numbers in the array.

#include<bits/stdc++.h>
using namespace std;

int main(){
    int a;
    int odd=0;
    int even=0;
    
    cout<<"Enter the size of the array: ";
    cin>>a;
    int arr[a];
    cout<<"Enter the array: ";
    for(int i=0;i<a;i++){
        cin>>arr[i];
    }
    
    for(int i=0;i<a;i++){
        if(arr[i]%2==0){
            even++;
        }else{
            odd++;
        }
    }
    
    cout<<"Number of odd number: "<<odd<<endl;
    cout<<"Number of even number: "<<even<<endl;
}
