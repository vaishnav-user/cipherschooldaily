// Ques - 01: 
// Write a C++ program that takes an integer N as input from the user and calculates the sum of the first N natural numbers using a for loop.

#include<iostream>
using namespace std;

int main(){
    int num,sum=0;
    cout<<"Enter a number: ";
    cin>>num;
    for(int i=1;i<=num;i++){
        sum=sum+i;
    }
    cout<<"The sum of the first 5 natural numbers is: "<<sum;
}




// Ques-02: 
// Write a C++ program that takes an integer N as input from the user and calculates the factorial of N using a loop.

#include<iostream>
using namespace std;

int main(){
    int num,fact=1;
    cout<<"Enter a number: ";
    cin>>num;
    for(int i=1;i<=num;i++){
        fact=fact*i;
    }
    cout<<"The factorial of "<<num<<" is: "<<fact;
}




// Ques-03: 
// Write a C++ program that takes an integer N as input from the user and prints the multiplication table of N up to 10 using a loop..

#include<iostream>
using namespace std;

int main(){
    int num;
    cout<<"Enter a number: ";
    cin>>num;
    for(int i=1;i<=10;i++){
        cout<<num<<" * "<<i<<" = "<<num*i<<endl;
    }
    return 0;
}
